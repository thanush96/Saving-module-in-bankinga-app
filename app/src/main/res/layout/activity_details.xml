<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <RelativeLayout
        android:id="@+id/bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/cardview_dark_background">

        <TextView
            android:id="@+id/dname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Bank name"
            android:textColor="@color/cardview_light_background"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Drate"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dname"
            android:layout_marginLeft="10dp"
            android:text="Interest"
            android:textColor="@color/cardview_light_background"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/drate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dname"
            android:layout_toRightOf="@id/Drate"
            android:layout_marginLeft="10dp"
            android:text="Interest"
            android:textColor="@color/cardview_light_background"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Dcalculate"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Drate"
            android:layout_marginLeft="10dp"
            android:text="Calculate Rs"
            android:textColor="@color/cardview_light_background"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/dcalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/drate"
            android:layout_toRightOf="@id/Dcalculate"
            android:layout_marginLeft="10dp"
            android:text="Calculate"
            android:textColor="@color/cardview_light_background"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Daddress"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Dcalculate"
            android:layout_marginLeft="10dp"
            android:text="Head Office"
            android:textColor="@color/cardview_light_background"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/daddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dcalculate"
            android:layout_toRightOf="@id/Daddress"
            android:layout_marginLeft="10dp"
            android:text="Address"
            android:textColor="@color/cardview_light_background"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Dtp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Daddress"
            android:layout_marginLeft="10dp"
            android:text="Contact"
            android:textColor="@color/cardview_light_background"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/dtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/daddress"
            android:layout_toRightOf="@id/Dcalculate"
            android:layout_marginLeft="10dp"
            android:text="Contact"
            android:textColor="@color/cardview_light_background"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/Dmail"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Dtp"
            android:layout_marginLeft="10dp"
            android:text="E-mail"
            android:textColor="@color/cardview_light_background"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/dmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dtp"
            android:layout_toRightOf="@id/Dmail"
            android:layout_marginLeft="10dp"
            android:text="mail"
            android:textColor="@color/cardview_light_background"
            android:textSize="15sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/bank">


        <TextView
            android:id="@+id/Cname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Full Name"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/cname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Full name"
            android:layout_below="@+id/Cname"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawablePadding="30dp"
            android:inputType="text"
            android:padding="10dp" />


        <TextView
            android:id="@+id/Cnic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cname"
            android:layout_margin="15dp"
            android:text="NIC Number"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/cnic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Cnic"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawablePadding="30dp"
            android:hint="Enter your NIC number"
            android:inputType="text"
            android:padding="10dp" />

        <TextView
            android:id="@+id/Caddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cnic"
            android:layout_margin="15dp"
            android:text="Address"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/caddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Caddress"
            android:layout_marginLeft="15dp"
            android:hint="Enter your Address"
            android:layout_marginRight="15dp"
            android:drawablePadding="30dp"
            android:inputType="text"
            android:padding="10dp" />

        <TextView
            android:id="@+id/Ccontact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/caddress"
            android:layout_margin="15dp"
            android:text="Contect No"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ccontact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Ccontact"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Enter your contact number"
            android:drawablePadding="30dp"
            android:inputType="text"
            android:padding="10dp" />


        <Button
            android:id="@+id/btLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ccontact"
            android:layout_centerVertical="true"
            android:text="Apply"
            android:textAllCaps="false" />
    </RelativeLayout>

</RelativeLayout>
